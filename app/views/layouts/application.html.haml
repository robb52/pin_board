!!! 5
%html
%head
  %title Pin Board
  = csrf_meta_tags
  = csp_meta_tag 
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

%body
  %nav.navbar.navbar-default
    .container
      .navbar-brand= link_to "Pin Board", root_path, class: "nav"

      - if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "New Pin", new_pin_path, class: "link-a"
          %li= link_to "Account", edit_user_registration_path, class: "link"
          %li= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "link-b"
      - else
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "Sign Up", new_user_registration_path, class: "link-a"
          %li= link_to "Sign In", new_user_session_path, class: "link-b"

  .container
    - flash.each do |name, msg|
      = content_tag :div, msg, class: "alert alert-info"

    = yield

